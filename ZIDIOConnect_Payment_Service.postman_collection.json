            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/v1/payments/razorpay/verify?transactionId=TXN_1234567890_abc123&razorpayPaymentId=pay_abc123&razorpayOrderId=order_abc123&razorpaySignature=signature_abc123",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "v1", "payments", "razorpay", "verify"],
              "query": [
                {
                  "key": "transactionId",
                  "value": "TXN_1234567890_abc123"
